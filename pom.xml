<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.1.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.1.0 http://maven.apache.org/xsd/maven-4.1.0-alpha-8.xsd">
    <modelVersion>4.1.0</modelVersion>

    <groupId>de.freese.test-repo-release</groupId>
    <artifactId>parent</artifactId>
    <version>1.9-SNAPSHOT</version>
    <packaging>pom</packaging>

    <inceptionYear>2023</inceptionYear>
    <url>https://github.com/tfreese/test-repo-release</url>

    <organization>
        <name>Thomas Freese</name>
        <url>https://github.com/tfreese</url>
    </organization>

    <scm>
        <url>${project.url}</url>
        <connection>scm:git:git@github.com:tfreese/test-repo-release.git</connection>
        <developerConnection>scm:git:git@github.com:tfreese/test-repo-release.git</developerConnection>
        <tag>v1.8</tag>
    </scm>

    <modules>
        <module>test-api</module>
        <module>test-impl</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.propertiesEncoding>UTF-8</project.build.propertiesEncoding>

        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <maven.minimum.version>4.0.0-alpha-8</maven.minimum.version>

        <!-- Dependencies -->
        <version_junit>5.10.1</version_junit>

        <!-- Plugins -->
        <version_maven-clean-plugin>3.3.2</version_maven-clean-plugin>
        <version_maven-compiler-plugin>3.11.0</version_maven-compiler-plugin>
        <version_maven-deploy-plugin>3.1.1</version_maven-deploy-plugin>
        <version_maven-enforcer-plugin>3.4.1</version_maven-enforcer-plugin>
        <version_maven-install-plugin>3.1.1</version_maven-install-plugin>
        <version_maven-jar-plugin>3.3.0</version_maven-jar-plugin>
        <version_maven-javadoc-plugin>3.6.2</version_maven-javadoc-plugin>
        <version_maven-release-plugin>3.0.1</version_maven-release-plugin>
        <version_maven-resources-plugin>3.3.1</version_maven-resources-plugin>
        <version_maven-site-plugin>3.12.1</version_maven-site-plugin>
        <version_maven-source-plugin>3.3.0</version_maven-source-plugin>
        <version_maven-surefire-plugin>3.2.2</version_maven-surefire-plugin>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>${version_maven-clean-plugin}</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${project.basedir}/bin</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${version_maven-compiler-plugin}</version>
                <configuration>
                    <release>${java.version}</release>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <debug>true</debug>
                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>${version_maven-deploy-plugin}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>${version_maven-enforcer-plugin}</version>
                <executions>
                    <execution>
                        <id>enforce-versions</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <rules>
                        <requireMavenVersion>
                            <version>[${maven.minimum.version},)</version>
                            <message>You are running an older version of Maven, at least Maven ${maven.minimum.version}</message>
                        </requireMavenVersion>
                        <requireJavaVersion>
                            <version>[${maven.compiler.source},)</version>
                            <message>You are running an older version of Java, at least JDK ${java.version}</message>
                        </requireJavaVersion>
                    </rules>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>${version_maven-install-plugin}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${version_maven-jar-plugin}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>${version_maven-javadoc-plugin}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${version_maven-release-plugin}</version>
                <configuration>
                    <tagNameFormat>v@{project.version}</tagNameFormat>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <releaseProfiles>releases</releaseProfiles>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${version_maven-resources-plugin}</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <propertiesEncoding>${project.build.propertiesEncoding}</propertiesEncoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${version_maven-surefire-plugin}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>${version_maven-source-plugin}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>${version_maven-site-plugin}</version>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>local-repos-releases</id>
            <url>file:/tmp/maven-distribution/releases</url>
            <name>Enthält deployte Release Artefakte</name>
        </repository>
        <snapshotRepository>
            <id>local-repos-snapshots</id>
            <url>file:/tmp/maven-distribution/snapshots</url>
            <name>Enthält deployte Snapshot Artefakte</name>
        </snapshotRepository>
        <site>
            <id>local-tmp</id>
            <url>file:/tmp/maven-distribution/sites</url>
            <name>Enthält die generierten Homepages</name>
        </site>
    </distributionManagement>

    <profiles>
