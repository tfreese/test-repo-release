                    <!--                                <id>default-deploy</id>-->
                    <!--                                <phase>deploy</phase>-->
                    <!--                                <goals>-->
                    <!--                                    <goal>deploy</goal>-->
                    <!--                                </goals>-->
                    <!--                            </execution>-->
                    <!--                        </executions>-->
                    <!--                        <configuration>-->
                    <!--                            <serverId>nexus-releases</serverId>-->
                    <!--                            <nexusUrl>http://localhost:8081/nexus/</nexusUrl>-->
